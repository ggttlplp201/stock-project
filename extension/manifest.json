{
  "manifest_version": 3,
  "name": "DoorDash Deal Finder",
  "description": "Find the lowest prices and fastest delivery times on DoorDash.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "DoorDash Deal Finder"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.doordash.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.doordash.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
